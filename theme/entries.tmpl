{% extends "base.tmpl" %}

{% block seo %}

<title>All posts at {{site.Name}}</title>
<link rel="canonical" href="{{site.URL}}/posts/">
<meta property="og:url" content="{{site.URL}}/posts/"/>
<meta property="og:title" content="All posts at {{site.Name}}"/>
<meta property="og:description" content="All posts at {{site.Description}}"/>
<meta property="og:type" content=”website” />
<meta property="og:image" content="https://firebasestorage.googleapis.com/v0/b/darshansharma-ur.appspot.com/o/images%2F286366543_436060667935480_6479411762365981172_n.jpeg?alt=media&token=0dbe8925-c5ca-420a-a2f1-63d51fb74ee2" />
<meta name="description" content="All posts at {{site.Description}}"/>
<meta name="twitter:description" content="All posts at {{site.Description}}" />
<script type="application/ld+json">
  {
    "@context": "https://schema.org/",
    "@type": "BlogPosting",
      "headline": "All posts at {{site.Name}}",
      "url": "{{site.URL}}/posts/",
      "description": "All posts at {{site.Description}}",
      "image": "https://firebasestorage.googleapis.com/v0/b/darshansharma-ur.appspot.com/o/images%2F286366543_436060667935480_6479411762365981172_n.jpeg?alt=media&token=0dbe8925-c5ca-420a-a2f1-63d51fb74ee2",
      "author": {
        "@type": "Person",
        "name": "{{user.Name}}"
      }
  }
</script>
{% endblock %}

{% block content %}
<div class="tc">        
  <h1 class="pt3 mb1 mt1 f3 black">All Articles I've Written So Far...</h1>
</div>
  {% for entry in entries %}
      <article class="pt3 pb3 bb b--moon-gray">
      <div>
        <div class="pa2 ph3-ns pb3-ns">
        <a href="/{{entry.Slug}}/"title="click to read {{entry.Slug}}">{{entry.Title}}</a>
          
            <p class="mb1 mt1 f4 black">
            
              <div class="dtc">
                <img class="w-200 db br2" src={{entry.FeaturedImage}} />
              <div>
              <small class="dtc tr">
                <time datetime="{{entry.PublishAt | slice: ":11" }} class="f5 mv0"">
                  {{ entry.PublishAt }}
                </time>
              </small>
              <span "class="f6 lh-copy measure mt2"> - {{ entry.Excerpt }}&hellip;</span>
            </p>
          </div>
        {% if entry.Tags %}
          <small class="black">
            {% for tag in entry.Tags %}
              <a href="/tags/{{tag}}/" class="link" title="click to read all articles under {{tag}}">#{{tag}}</a>
              {% if not forloop.Last %}, {% endif %}
            {% endfor %}
          </small>
        {% endif %}
        </div>
      </article>
  {% endfor %}
{% endblock %}
